<main class="content profile">
  <header class="content-cover">
    <div id="cover-pic-holder"><img id="cover-pic" src="<%= user.escape("cover_pic") %>"/></div>
    <h1><%= user.escape("name") %></h1>
    <img id="profile-pic" src="<%= user.escape("profile_pic") %>"/>

    <% if (user === currentUser) { %>
      <button id="change-avatar">Update Profile Picture</button>
      <button id="change-cover">Update Cover Picture</button>
    <% } %>

    <div class="profile-ribbon">
      <ul class="nav nav-pills">
        <li role="presentation"><a href="#">Timeline</a></li>
        <li role="presentation"><a href="#">About</a></li>
        <li role="presentation"><a href="#">Friends</a></li>
        <li role="presentation"><a href="#">Photos</a></li>
      </ul>
    </div>
  </header>

  <section class="content-sidebar">
    <ul class="basic-info"></div>
    <div class="friends-thumbs">

    </div>

    <div class="photos-thumbs">

    </div>
  </section>

  <section class="content-main">

    <div class="new-post-form"></div>
    <div class="posts-holder"></div>

  </section>

</main>
