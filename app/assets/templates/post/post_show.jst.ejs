<p class="post-body">
  <%= post.escape('body') %>
</p>

<br>
<%= post.escape("numLikes") %>
<br>

<% var likeButtonText = "" %>
<% if (post.isLiked() === true) { %>
<%   likeButtonText = "Unlike"; %>
<% } else { %>
<%   likeButtonText = "Like!"; %>
<% } %>

<button class="post-like"><%= likeButtonText %></button>
<br>

<ul class="comments-container"></ul>
<div class="new-comment-container"></div>
