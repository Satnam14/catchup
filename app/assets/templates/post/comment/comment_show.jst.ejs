<img class="comment-author-avatar" src=" <%= comment.escape('author_avatar') %>" />

<% if (comment.escape('author_id') === currentUser.escape('id')) { %>
  <div class="dropdown comment-dropdown">
  <button class="btn-comment-dropdown dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li><a href="#" class="edit-comment">Edit</a></li>
    <li><a href="#" class="delete-comment">Delete</a></li>
  </ul>
</div>
<% } %>

<p class="comment-body">
  <a href="#users/<%= comment.escape('author_id') %>"><%= comment.escape('author_name') %></a> <%= comment.escape('body') %>
</p>

<p class="comment-date">
  <%= comment.escape('commented_on') %>
</p>
